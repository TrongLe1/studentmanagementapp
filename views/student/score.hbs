<main class="main-content mb-4"  style="height: 100%">
    <div class="container col d-flex justify-content-center">
        <div class="col-md-8">
            {{#if flag}}
                <div class="row">
                    <div class="col-md-6">
                        <form class="form-inline" method="post" action="/student/score">
                            <label class="my-1 mr-2" for="value">Chọn học kì - năm học</label>
                            <select onchange="this.form.submit()" class="custom-select my-1 mr-sm-2" id="value" name="value">
                                {{#each chooseList}}
                                    <option {{#if isSelected}}selected{{/if}} value="{{HocKy}}/{{NamHoc}}">
                                        {{HocKy}} / {{NamHoc}}
                                    </option>
                                {{/each}}
                            </select>
                        </form>
                    </div>
                    <div class="col-md-6 d-flex justify-content-end">
                        <div class="alert alert-info">
                            <span class="font-weight-bold">Lớp: </span>
                            <span class="text-uppercase">{{this.studentClass}}</span>
                        </div>
                    </div>
                </div>
                <table class="table table-bordered table-hover table-striped">
                    <thead style="background: #fcfb83;font-size: 14px">
                    <tr>
                        <th class="text-center">#</th>
                        <th class="text-center">Môn học</th>
                        <th class="text-center" colspan="4">Hệ số 1</th>
                        <th class="text-center" colspan="2">Hệ số 2</th>
                        <th class="text-center">Thi HK</th>
                        <th class="text-center">Tổng điểm</th>
                    </tr>
                    </thead>
                    <tbody style="font-size: 13px">
                    {{#each scoresList}}
                        <tr>
                            <td class="text-center">{{plusIdx @index}}</td>
                            <td class="no-wrap" >{{TenMonHoc}}</td>
                            {{{formatScores this.scores}}}
                        </tr>
                    {{/each}}
                    </tbody>

                </table>
            {{else}}
                <div class="alert alert-info" role="alert">
                    {{this.msg}}
                </div>
            {{/if}}
        </div>
    </div>
</main>

