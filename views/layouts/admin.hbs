<!DOCTYPE html>
<html lang="en" class="no-js">
<!-- Head -->

<head>
    <title>Dashboard | Teachio - Dashboard</title>

    <!-- Meta -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">


    <!-- Components Vendor Styles -->
    <link rel="stylesheet" href="public/admin-assets/vendor/font-awesome/css/all.min.css">
    <link rel="stylesheet" href="public/admin-assets/vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.css">

    <!-- Theme Styles -->
    <link rel="stylesheet" href="public/admin-assets/css/theme.css">
    <link rel="stylesheet" href="public/admin-assets/css/style.css">

    <!-- Custom Charts -->
    <style>
        .js-doughnut-chart {
            width: 70px !important;
            height: 70px !important;
        }
    </style>
</head>
<!-- End Head -->

<body>
<!--body background-->
<div class="body-bg"></div>
<!-- Header (Topbar) -->
<header class="teachio-header u-header">
    <div class="u-header-left">
        <a class="u-header-logo" href="/admin">
            <img class="u-logo-desktop" src="" width="160" alt="Logo Dashboard">
            <img class="img-fluid u-logo-mobile" src="" width="50" alt="Logo Dashboard">
        </a>
    </div>

    <div class="u-header-middle">
        <a class="js-sidebar-invoker u-sidebar-invoker" href="" data-is-close-all-except-this="true" data-target="#sidebar">
            <i class="fa fa-bars u-sidebar-invoker__icon--open"></i>
            <i class="fa fa-times u-sidebar-invoker__icon--close"></i>
        </a>
    </div>

    <div class="u-header-right">
        <!-- User Profile -->
        <div class="teachio-user-top-corner dropdown ml-2">
            <a class="link-muted d-flex align-items-center" href="#!" role="button" id="dropdownMenuLink" aria-haspopup="true" aria-expanded="false" data-toggle="dropdown">
                <img class="u-avatar--xs img-fluid mr-2" src="public/admin-assets/img/avatars/img1.jpg" alt="User Profile">
                <span class="d-none d-sm-inline-block align-items-center menu-dots-wrap">
                        Trong Le <img src="public/admin-assets/img/menu-dots.png" alt="" class="menu-dots">
                    </span>
            </a>
            <div class="dropdown-menu dropdown-menu-right border-0 py-0 mt-3" aria-labelledby="dropdownMenuLink" style="width: 260px;">
                <div class="card">
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li class="mb-4">
                                <a class="d-flex align-items-center link-dark" href="">
                                    <span class="h3 mb-0"><i class="far fa-user-circle text-muted mr-3"></i></span> View Profile
                                </a>
                            </li>
                            <li>
                                <a class="d-flex align-items-center link-dark" href="">
                                    <span class="h3 mb-0"><i class="far fa-share-square text-muted mr-3"></i></span> Sign Out
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- End User Profile -->
    </div>
</header>
<!-- End Header (Topbar) -->

<main class="u-main" role="main">

    <!-- Sidebar -->
    <aside id="sidebar" class="teachio-sidebar u-sidebar">
        <div class="u-sidebar-inner">
            <header class="u-sidebar-header">
                <a class="u-sidebar-logo" href="">
                    <img class="img-fluid" src="public/admin-assets/img/logo.png" width="124" alt="Stream Dashboard">
                </a>
            </header>

            <nav class="u-sidebar-nav">
                <ul class="u-sidebar-nav-menu u-sidebar-nav-menu--top-level">

                    <!-- Dashboard -->
                    <li class="u-sidebar-nav-menu__item">
                        <a class="u-sidebar-nav-menu__link active" href="/admin">
                            <i class="fas fa-th-large u-sidebar-nav-menu__item-icon"></i>
                            <span class="u-sidebar-nav-menu__item-title">Dashboard</span>
                        </a>
                    </li>
                    <!-- End Dashboard -->

                    <li class="u-sidebar-nav-menu__item clearfix">
                        <a class="u-sidebar-nav-menu__link" href="" data-target="#classes">
                            <i class="fas fa-graduation-cap u-sidebar-nav-menu__item-icon"></i>
                            <span class="u-sidebar-nav-menu__item-title">Classes</span>
                            <i class="fa fa-angle-right u-sidebar-nav-menu__item-arrow"></i>
                            <span class="u-sidebar-nav-menu__indicator"></span>
                        </a>

                        <ul id="classes" class="u-sidebar-nav-menu u-sidebar-nav-menu--second-level text-center" style="display: none;">
                            <li class="u-sidebar-nav-menu__item">
                                <a class="u-sidebar-nav-menu__link" href="">
                                    <span class="u-sidebar-nav-menu__item-title">All Classes</span>
                                </a>
                            </li>
                            <li class="u-sidebar-nav-menu__item">
                                <a class="u-sidebar-nav-menu__link" href="">
                                    <span class="u-sidebar-nav-menu__item-title">Add Class</span>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li class="u-sidebar-nav-menu__item clearfix">
                        <a class="u-sidebar-nav-menu__link" href="" data-target="#students">
                            <i class="fas fa-user-graduate u-sidebar-nav-menu__item-icon"></i>
                            <span class="u-sidebar-nav-menu__item-title">Students</span>
                            <i class="fa fa-angle-right u-sidebar-nav-menu__item-arrow"></i>
                            <span class="u-sidebar-nav-menu__indicator"></span>
                        </a>

                        <ul id="students" class="u-sidebar-nav-menu u-sidebar-nav-menu--second-level text-center" style="display: none;">
                            <li class="u-sidebar-nav-menu__item">
                                <a class="u-sidebar-nav-menu__link" href="">
                                    <span class="u-sidebar-nav-menu__item-title">All Students</span>
                                </a>
                            </li>
                            <li class="u-sidebar-nav-menu__item">
                                <a class="u-sidebar-nav-menu__link" href="">
                                    <span class="u-sidebar-nav-menu__item-title">Add Student</span>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li class="u-sidebar-nav-menu__item clearfix">
                        <a class="u-sidebar-nav-menu__link" href="" data-target="#teachers">
                            <i class="fas fa-chalkboard-teacher u-sidebar-nav-menu__item-icon"></i>
                            <span class="u-sidebar-nav-menu__item-title">Teachers</span>
                            <i class="fa fa-angle-right u-sidebar-nav-menu__item-arrow"></i>
                            <span class="u-sidebar-nav-menu__indicator"></span>
                        </a>

                        <ul id="teachers" class="u-sidebar-nav-menu u-sidebar-nav-menu--second-level text-center" style="display: none;">
                            <li class="u-sidebar-nav-menu__item">
                                <a class="u-sidebar-nav-menu__link" href="">
                                    <span class="u-sidebar-nav-menu__item-title">All Teachers</span>
                                </a>
                            </li>
                            <li class="u-sidebar-nav-menu__item">
                                <a class="u-sidebar-nav-menu__link" href="">
                                    <span class="u-sidebar-nav-menu__item-title">Add Teacher</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </nav>
        </div>
    </aside>
    <!-- End Sidebar -->
    {{{body}}}
</main>


<!-- Global Vendor -->
<script src="public/admin-assets/vendor/jquery/dist/jquery.min.js"></script>
<script src="public/admin-assets/vendor/jquery-migrate/jquery-migrate.min.js"></script>
