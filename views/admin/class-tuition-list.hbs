<div class="u-content">
    <div class="u-body">
        <div class="row">
            <div class="col-md-12">
                <header class="section-header mb-4">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h2 class="h3 card-header-title">Học phí {{clss.TenLop}}</h2>
                        </div>
                        <div class="col-md-6 text-right">
                            <select id="semester" name="semester" onchange="location = this.value;">
                                <option data-display="Chọn học kỳ" value="/admin/class/tuition?id={{clss.MaLop}}">Học kỳ</option>
                                {{#if check}}
                                    {{#if check1}}
                                        <option value="/admin/class/tuition?id={{clss.MaLop}}&semester=1" selected>Học kỳ 1</option>
                                        <option value="/admin/class/tuition?id={{clss.MaLop}}&semester=2">Học kỳ 2</option>
                                    {{else}}
                                        <option value="/admin/class/tuition?id={{clss.MaLop}}&semester=1">Học kỳ 1</option>
                                        <option value="/admin/class/tuition?id={{clss.MaLop}}&semester=2" selected>Học kỳ 2</option>
                                    {{/if}}
                                {{else}}
                                    <option value="/admin/class/tuition?id={{clss.MaLop}}&semester=1">Học kỳ 1</option>
                                    <option value="/admin/class/tuition?id={{clss.MaLop}}&semester=2">Học kỳ 2</option>
                                {{/if}}
                            </select>
                            <a href="/admin/class/tuition/add?id={{clss.MaLop}}" class="box-btn">Thêm học phí</a>
                        </div>
                    </div>
                </header>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        {{!--<th scope="col" class="text-center">ID</th>--}}
                                        <th scope="col" width="150">Tên học phí</th>
                                        <th scope="col">Học kỳ</th>
                                        <th scope="col">Năm học</th>
                                        <th scope="col" >Tổng tiền</th>
                                        <th scope="col" class="text-center" width="250">Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {{#each result}}
                                    <form method="post" id="formPost{{MaHocPhi}}">
                                        <input name="id" value="{{MaHocPhi}}" hidden>
                                    </form>
                                    <form method="get" id="formGet{{MaHocPhi}}">
                                        <input name="id" value="{{MaHocPhi}}" hidden>
                                    </form>
                                    <tr>
                                        {{!--<td class="text-center">{{MaHocPhi}}</td>--}}
                                        <td>{{TenHocPhi}}</td>
                                        <td>Học kỳ {{HocKy}}</td>
                                        <td>{{NamHoc}}</td>
                                        <td>{{formatMoney TongTien}}</td>
                                        <td class="text-center">
                                            {{!--
                                            <button type="submit" class="btn btn-outline-primary" form="formGet{{MaGV}}" formaction="/admin/teacher/edit">Chỉnh sửa</button>
                                            <button type="submit" class="btn btn-outline-success" form="formPost{{MaGV}}" formaction="/admin/teacher/createaccount">Tạo tài khoản</button>
                                            --}}
                                            <button type="submit" class="btn btn-outline-secondary" form="formGet{{MaHocPhi}}" formaction="/admin/class/tuition/edit">Chỉnh sửa</button>
                                            <button type="submit" class="btn btn-outline-danger" form="formPost{{MaHocPhi}}" formaction="/admin/class/tuition/delete">Xóa</button>
                                        </td>
                                    </tr>
                                {{/each}}
                                </tbody>
                            </table>
                        </div>
                        {{#if curPage.check}}
                            <div class="pagination-wrap mt-3 text-center">
                                <nav aria-label="Bootstrap Pagination Example">
                                    <ul class="pagination mb-0">
                                        {{#if prevPage.check}}
                                            {{#if check}}
                                                <li class="page-item">
                                                    <a class="page-link" href="/admin/class/tuition?id={{clss.MaLop}}&semester={{semester}}&page={{prevPage.value}}">&larr; <span class="ml-1 d-none d-xl-inline-block">Previous</span></a>
                                                </li>
                                                <li class="page-item">
                                                    <a class="page-link" href="/admin/class/tuition?id={{clss.MaLop}}&semester={{semester}}&page={{prevPage.value}}">{{prevPage.value}}</a>
                                                </li>
                                            {{else}}
                                                <li class="page-item">
                                                    <a class="page-link" href="/admin/class/tuition?id={{clss.MaLop}}&page={{prevPage.value}}">&larr; <span class="ml-1 d-none d-xl-inline-block">Previous</span></a>
                                                </li>
                                                <li class="page-item">
                                                    <a class="page-link" href="/admin/class/tuition?id={{clss.MaLop}}&page={{prevPage.value}}">{{prevPage.value}}</a>
                                                </li>
                                            {{/if}}
                                        {{/if}}
                                        <li class="page-item active">
                                            <a class="page-link">{{curPage.value}}</a>
                                        </li>
                                        {{#if nexPage.check}}
                                            {{#if check}}
                                                <li class="page-item">
                                                    <a class="page-link" href="/admin/class/tuition?id={{clss.MaLop}}&semester={{semester}}&page={{nexPage.value}}">{{nexPage.value}}</a>
                                                </li>
                                                <li class="page-item">
                                                    <a class="page-link" href="/admin/class/tuition?id={{clss.MaLop}}&semester={{semester}}&page={{nexPage.value}}"><span class="mr-1 d-none d-xl-inline-block">Next</span> &rarr;</a>
                                                </li>
                                            {{else}}
                                                <li class="page-item">
                                                    <a class="page-link" href="/admin/class/tuition?id={{clss.MaLop}}&page={{nexPage.value}}">{{nexPage.value}}</a>
                                                </li>
                                                <li class="page-item">
                                                    <a class="page-link" href="/admin/class/tuition?id={{clss.MaLop}}&page={{nexPage.value}}"><span class="mr-1 d-none d-xl-inline-block">Next</span> &rarr;</a>
                                                </li>
                                            {{/if}}
                                        {{/if}}
                                    </ul>
                                </nav>
                            </div>
                        {{/if}}
                    </div>
                </div>
                <div class="text-right mt-3">
                    <p class="text-danger" style="font-size: large;font-weight: bold">Tổng tiền: {{formatMoney sum}}</p>
                </div>
            </div>
        </div>
    </div>
</div>
