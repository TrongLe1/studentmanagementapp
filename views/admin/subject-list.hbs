<div class="u-content">
    <div class="u-body">
        <header class="section-header mb-4">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h2 class="h3 card-header-title">Danh sách môn học</h2>
                </div>
                <div class="col-md-6 text-right">
                    <a href="/admin/subject/add" class="box-btn">Thêm môn học</a>
                </div>
            </div>
        </header>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th scope="col" class="text-center">ID</th>
                                    <th scope="col">Tên môn học</th>
                                    <th scope="col" class="text-center">Hành động</th>
                                </tr>
                                </thead>
                                <tbody>
                                {{#each result}}
                                    <form method="get" id="formGet{{MaMon}}">
                                        <input name="id" value="{{MaMon}}" hidden>
                                    </form>
                                    <form method="post" id="formPost{{MaMon}}">
                                        <input name="id" value="{{MaMon}}" hidden>
                                    </form>
                                    <tr>
                                        <td class="text-center">{{MaMon}}</td>
                                        <td>{{TenMonHoc}}</td>
                                        <td class="text-center">
                                            <button type="submit" class="btn btn-outline-secondary" form="formGet{{MaMon}}" formaction="/admin/subject/edit">Chỉnh sửa</button>
                                            <button type="submit" class="btn btn-outline-danger" form="formPost{{MaMon}}" formaction="/admin/subject/delete">Xóa</button>
                                        </td>
                                    </tr>
                                {{/each}}
                                </tbody>
                            </table>
                        </div>
                        {{#if curPage.check}}
                            <div class="pagination-wrap mt-3 text-center">
                                <nav aria-label="Bootstrap Pagination Example">
                                    <ul class="pagination mb-0">
                                        {{#if prevPage.check}}
                                            <li class="page-item">
                                                <a class="page-link" href="/admin/subject?page={{prevPage.value}}">&larr; <span class="ml-1 d-none d-xl-inline-block">Previous</span></a>
                                            </li>
                                            <li class="page-item">
                                                <a class="page-link" href="/admin/subject?page={{prevPage.value}}">{{prevPage.value}}</a>
                                            </li>
                                        {{/if}}
                                        <li class="page-item active">
                                            <a class="page-link">{{curPage.value}}</a>
                                        </li>
                                        {{#if nexPage.check}}
                                            <li class="page-item">
                                                <a class="page-link" href="/admin/subject?page={{nexPage.value}}">{{nexPage.value}}</a>
                                            </li>
                                            <li class="page-item">
                                                <a class="page-link" href="/admin/subject?page={{nexPage.value}}"><span class="mr-1 d-none d-xl-inline-block">Next</span> &rarr;</a>
                                            </li>
                                        {{/if}}
                                    </ul>
                                </nav>
                            </div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>