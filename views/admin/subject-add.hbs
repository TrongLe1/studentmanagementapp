<div class="u-content">
    <div class="u-body">
        <header class="section-header mb-4">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h2 class="h3 card-header-title">Thêm môn học</h2>
                </div>
            </div>
        </header>
        <div class="row">
            <div class="col-md-12">
                <div class="category-add-form-wrap">
                    <form action="/admin/subject/add" method="post" class="category-add-form">
                        <div class="form-group">
                            <label for="name">Tên môn học</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Nhập tên môn học" required>
                        </div>
                        {{#if added}}
                            <p class="text-success">Thêm thành công</p>
                        {{/if}}
                        <div class="form-group">
                            <button class="box-btn" type="submit">Thêm</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
