<div class="u-content">
    <div class="u-body">
        <header class="section-header mb-4">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h2 class="h3 card-header-title">Thêm lịch thi {{clss.TenLop}}</h2>
                </div>
            </div>

        </header>
        <div class="row">
            <div class="col-md-12">
                <div class="category-add-form-wrap">
                    <form action="/admin/class/schedule/add" method="post" class="category-add-form">
                        <div class="form-group">
                            <label for="schedule">Lịch thi</label>
                            <select id="schedule" name="schedule" required>
                                <option data-display="Chọn lịch thi" value="">Lịch thi</option>
                                {{#each schedules}}
                                <option value="{{MaLichThi}}">Lịch thi {{MaLichThi}} - HK{{HocKy}}/{{NamHoc}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">&nbsp;</div>
                        {{#if added}}
                            <p class="text-success">Thêm thành công</p>
                        {{/if}}
                        <input name="id" value="{{clss.MaLop}}" hidden>
                        <div class="form-group">
                            <button class="box-btn" type="submit">Thêm</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
